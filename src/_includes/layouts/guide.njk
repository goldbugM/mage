---
layout: layouts/base.njk
---

{% block content %}
<!-- Hero Section -->
<section class="hero">
    <div class="hero-background" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('{{ heroImage }}');"></div>
    <div class="hero-content">
        <h1 class="serif">{{ title }}</h1>
        <p>{{ subtitle or description }}</p>
    </div>
</section>

<!-- Article Content -->
<article class="article-content">
    <div class="container">
        <div class="article-header">
            <div class="article-meta">
                <span class="category-badge">{{ category }}</span>
                <span><i class="fas fa-clock"></i> {{ content | readingTime }} min read</span>
                <span><i class="fas fa-map-marker-alt"></i> {{ location }}</span>
                <span><i class="fas fa-calendar"></i> Updated {{ date }}</span>
            </div>
        </div>

        <div class="content-section">
            {{ content | safe }}
            
            <div class="back-to-blog">
                <a href="/" class="back-link" id="backToTravelBlog">
                    <i class="fas fa-arrow-left"></i>
                    Back to Travel Blog
                </a>
            </div>

            <script>
                // Handle smart back navigation
                document.addEventListener('DOMContentLoaded', function() {
                    const backLink = document.getElementById('backToTravelBlog');
                    if (backLink) {
                        backLink.addEventListener('click', function(e) {
                            const returnSection = sessionStorage.getItem('returnToSection');
                            if (returnSection) {
                                // Modify the href to include the section hash
                                this.href = `/#${returnSection}`;
                            }
                            // Let the normal navigation proceed
                        });
                    }
                });
            </script>
        </div>
    </div>
</article>
{% endblock %}
